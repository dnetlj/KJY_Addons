<openerp>
    <data>

        <record id="kjy_purchase_order_cost_type_view_form" model="ir.ui.view">
            <field name="name">kjy_purchase_order_cost_type_view_form</field>
            <field name="model">kjy.purchase.order.cost.type</field>
            <field name="arch" type="xml">
                <form string="费用类型">
                    <sheet>
                        <group>
                            <field name="supplier_id" required="1"></field>
                            <field name="name" required="1"></field>
                            <field name="active"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kjy_purchase_order_cost_type_view_tree" model="ir.ui.view">
            <field name="name">kjy_purchase_order_cost_type_view_tree</field>
            <field name="model">kjy.purchase.order.cost.type</field>
            <field name="arch" type="xml">
                <tree string="费用类型"><!--colors="red:now_time=='1';blue:now_time=='2'"-->
                    <field name="supplier_id"></field>
                    <field name="name"></field>
                    <field name="active"></field>
                </tree>
            </field>
        </record>

        <record id="kjy_purchase_order_cost_type_action" model="ir.actions.act_window">
            <field name="name">费用类型</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kjy.purchase.order.cost.type</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="kjy_purchase_order_cost_type_menu" name="费用类型" parent="menu_kjy_purchase_confing"
                  action="kjy_purchase_order_cost_type_action"/>

    </data>
</openerp>
